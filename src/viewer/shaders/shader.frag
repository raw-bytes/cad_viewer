
//------------------------------------------
// INPUTS
//------------------------------------------

in vec3 varNormal;

//------------------------------------------
// UNIFORMS
//------------------------------------------

uniform vec3 diffuseColor;

//------------------------------------------
// OUTPUT
//------------------------------------------

out vec4 outColor;

//------------------------------------------
// CONSTANTS
//------------------------------------------

void main() {
    vec3 normal = normalize(varNormal);
    float f = abs(normal.z) * 0.75 + 0.25;

    outColor = vec4(f * diffuseColor, 1.0);
}